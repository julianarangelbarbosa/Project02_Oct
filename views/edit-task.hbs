    <h1>Tasks page</h1>

<form action='/edit-task/{{_id}}' method="post"></form>

<label for="title">Title</label>
<input type='text' name='title' id='title' value='{{title}}'/>

<p>
<label for="description">Description</label>
<textarea name='description' id='description'
cols='30' rows='10'> {{description}}</textarea>
<p>

<p>
<label for="date">Task Data dd/mm/yy</label>
<input type='text' name='date' id='date' value='{{date}}'/>
</p>

<p>
<label for="type">Task Type</label>
<input type='text' name='type' id='type' value='{{type}}'/>
</p>

<p>
<label for="status">Task Status</label>
<input type='text' name='status' id='status' value='{{status}}'/>
</p>

<p>
<label for="address">Task Location</label>
<input type='text' name='address' id='address' value='{{address}}'/>
</p>

<button type='submit'>Edit the Tasks</button>

<a href='/planner'>Update Task</a>

</form>
       
      




