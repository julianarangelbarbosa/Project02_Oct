    <h1>Tasks page</h1>

<form action='/edit-task/{{_id}}' method="post">

<label for="title">Title</label>
<input type='text' name='title' id='title' value='{{title}}'/>

<p>
<label for="description">Description</label>
<textarea name='description' id='description'
cols='30' rows='10'> {{description}}</textarea>
<p>

<p>
<label for="date">Task Data</label>
<input type='date' name='date' id='date' value='{{date}}'/>
</p>

<p>
<label for="hhmm">Task Time</label>
<input type='time' name='hhmm' id='hhmm' value='{{hhmm}}'/>
</p>

<p>
<label for="type">Task Type</label>
<input type='text' name='type' id='type' value='{{type}}'/>
</p>

<p>
<label for="status">Task Status</label>
<input type='text' name='status' id='status' value='{{status}}'/>
</p>

<p>
<label for="address">Task Location</label>
<input type='text' name='address' id='address' value='{{address}}'/>
</p>

<button type='submit'>Edit Tasks</button>

</form>

 
       
<form action="/task-delete/{{_id}}" method="post">
<button type='submit'>Delete Task</button>

</form>      




